doctype html
html(lang='en')
  head
    include head.jade
  body
    include navbar.jade

    // Search & Filters 
    .container(style="padding-top:40px;margin-bottom:10px;")
      .row.search-form
        #typeahed-container.col-sm-5(style='border:0px solid red')
          input#myinput.text-uppercase.typeahead.form-control(type='text', placeholder='Loading the list of 91,000 US governments...' style="width:412px")
          p.text-center.text-nowrap
            |Type government name here &nbsp;&nbsp; 
            span(style="font-size:150%; position:relative; top:-6px;")⤴  
            |&nbsp; or find it on the map &nbsp;&nbsp;
            span(style="font-size:150%;position: relative; top:12px;")⤵ 
        
        .col-sm-2.text-center(style='border:0px solid red; opacity:0.5;padding:0;margin:0; line-height:1')
          .gov-counter(style="margin-top:8px; font-size:150%;font-weight:bold;")
          p governments
            
        .col-sm-5.text-right(style='border:0px solid red;')
          form.form-inline
            span.state-container(style="margin-right:20px;")
            span.gov-type-container
          p.text-center.text-nowrap
            |flter by state &nbsp;&nbsp;
            span(style="font-size:150%; position:relative; top:-6px;")⤴  &nbsp;&nbsp;&nbsp;&nbsp;
            |&nbsp;by type&nbsp;&nbsp;
            span(style="font-size:150%; position:relative; top:-6px;")⤴  



    // MAP      
    .container(style="margin-bottom:150px;")
      .row
        .col-lg-12(style="border:0px solid silver;")
          #maparea
            #govmap(style="height:500px;border:1px solid silver;")
            // Controls to show results of geocoding
            //div
              .input-group
                span.input-group-addon
                  strong FIND:
                input#govaddress.form-control.input-sm
                .input-group-btn
                  button.glyphicon.glyphicon-search.btn.btn-default.input-sm(onclick="geocode_addr('#govaddress')")
              .govmap-found
    
    
    // DATA
    .container(style="margin-bottom:150px;")
      p.text-center
        a#btnBackToSearch.btn.btn-default(href='', role='button') back to search
          span(style="font-size:120%; position:relative; top:-6px;")&nbsp;⤴  
      .row
        .col-lg-12(style="margin-top:0; border:0px solid silver;")
          #details(style="margin-top:0; border:0px solid red;margin-bottom:60px; font-size:140%;")




    .container(style="margin-bottom:50px;")
      .row
        .col-sm-8
          p
            | California local government civic profile system for CPC.  
            | The application will be based on the California Credit Scoring System originally 
            | developed by Public Sector Credit Solutions and now maintained by CivicPartner LLC.
        .col-sm-4.text-right
          p
            a.btn.btn-lg.btn-primary(href='https://github.com/govwiki/govwiki.us', role='button') Github project



    // Scripts -- Placed at the end of the document so the pages load faster
    script(src='js_files/jquery.min.js')
    //script(src='./js_files/bootstrap.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    script(src='js_files/ie10-viewport-bug-workaround.js')
    script(src='js/plugins.js')

    script(src='bower_components/typeahead.js/dist/typeahead.bundle.min.js')
    //script(src='bower_components/mustache.js/mustache.min.js')
    script(src='bower_components/handlebars/handlebars.min.js')
    script(src='//maps.google.com/maps/api/js?sensor=false')
    script(src='bower_components/gmaps/gmaps.js')
    script(src='bower_components/jquery.scrollTo/jquery.scrollTo.js')
      
    script(src='static/bundle.js')
